{
  "manifest_version": 3,
  "name": "Enhanced News Toxicity Filter",
  "version": "1.1.1",
  "description": "Advanced toxic content detection and filtering for news articles",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bundle.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html"
} 